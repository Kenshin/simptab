// adapter all browser css propery
vendors = -webkit -moz -o -ms
prefix  = "-"
all-browser( prop, arguments, ppro = true )
  for vendor in vendors
     { vendor }-{ prop }: arguments
  if ppro
    { prop }: arguments

display-group( value, type )
  value + prefix + type

adapter-display( type = box )
  /*
  display: type
  for vendor in vendors
    display: display-group( vendor, type )
  */
  display: -webkit + prefix + type
  display: type

division()
    margin: 0 0 53px 0

@font-face
    src: url( ../font/en.ttf )
    font-family: en

@font-face
    src: url( ../font/zh-cn.bmp ) format('woff')
    font-family: zh-cn

@font-face
    src: url( ../font/zh-tw.bmp ) format('woff')
    font-family: zh-tw

@font-face
    src: 300 12px/1.8 -apple-system, PingFang SC, Verdana, Helvetica Neue, Microsoft Yahei, Hiragino Sans GB, Microsoft Sans Serif, WenQuanYi Micro Hei, sans-serif
    font-family: normal

html
    color: #333
    background: #fafafa

    text-rendering: optimizelegibility
    -webkit-text-size-adjust: 100%
    -ms-text-size-adjust: 100%
    -webkit-font-smoothing: antialiased

    width  : 100%
    height : 100%

body
    width   : 100%
    height  : 100%
    margin  : 0
    padding : 0

    font-family: en
    font-size: 12px

    background: url( ../image/bg.png ) repeat

    div
        adapter-display( flex )
        all-browser "justify-content",  center
        all-browser "align-items",      center

header
    background: #1DBA90

.top
    adapter-display( flex )
    all-browser "justify-content ", flex-end

    height: 100px
    padding: 0 10px

    font-family: normal

    ul
        adapter-display( flex )
        all-browser "flex-flow",        row nowrap
        all-browser "justify-content ", flex-end
        list-style: none

        li
            margin: 0 20px

            a
                padding-bottom: 5px
                color: #fff
                font-weight: 500
                text-decoration: none
                text-transform: uppercase
                transition: border-color .5s
                all-browser "border-bottom", 2px solid transparent

                &:hover
                    color: rgb(255, 255, 255)
                    all-browser "border-bottom", 2px solid #fff

.describe
    all-browser "flex-flow",       row wrap
    all-browser "justify-content", center

    color: #fff

    font-weight: bold

    padding: 0 10px

    .introduce
        all-browser "flex-flow",       column nowrap
        all-browser "justify-content", center

        .title
            all-browser "flex-flow", column nowrap

            margin-bottom: 15px

            div
                &:nth-child(1)
                    font-size: 50px
                &:nth-child(2)
                    font-size: 40px

        .download
            all-browser "justify-content", center
            all-browser "flex-flow",       column nowrap

        .btn-download
            adapter-display( flex )
            all-browser : "justify-content", center

            padding: 15px 15px 10px 15px
            margin-bottom: 15px

            color: #fff
            font-size: 33px

            text-decoration: none
            text-shadow: #000 0 1px 2px

            background-color: #7C4DFF

            all-browser : "border-radius", 6px
            all-browser : "box-shadow", 0 1px 5px rgba(0, 0, 0, 0.75)

            span
                display: block

                width : 48px
                height: @width

                background: url( ../image/webstore.png ) no-repeat

            nav
                adapter-display( flex )
                all-browser "flex-direction", column
                all-browser "align-items",    flex-end

                line-height: 0.5

                h3
                    padding: 0
                    margin : 0

                    line-height: 48px

                div
                    font-size  : 10px

            &:hover
                text-decoration: none
                background-position: 0 -15px
                background #7C4DFF
                background rgba(124, 77, 255, 0.89)

                all-browser "transition", background-position 0.1s linear
                all-browser "box-shadow", 0 1px 5px rgba(0, 0, 0, 0)

        .btn-offline-download
            padding: 0 2px

            text-decoration: none

            &:hover
                all-browser "transition", background-color 1s ease
                all-browser "border-radius", 3px

                background: #000
                background: rgba(0,0,0,.4)
                color: #fff

        .smaller
            font-size: 10px
            color: #fff

    .banner
        height: 656px
        width: 853px
        background: url( ../image/introduce.jpg ) no-repeat

.main
    all-browser "flex-flow",       row wrap
    all-browser "justify-content", center

    padding: 0 147px

    margin: 25px 0

    .feature
        all-browser "flex-flow",  column nowrap

        min-width: 191px

        padding: 25px
        margin:  30px

        background-color: #eff0f2
        all-browser "border-radius", 8px

        div
            padding-bottom: 6px

        .tooltip
            position: relative

            width: 100%

            cursor: pointer

            &:hover:before,
            &:hover:after
                all-browser "transition", opacity 1s ease
                opacity: 0.8

        .tooltip:before
            content: " "

            position: absolute
            left: 82px
            bottom: 42px

            border-top:   9px solid #2C3E50
            border-left:  9px solid transparent
            border-right: 9px solid transparent

            opacity: 0

        .tooltip:after
            content: attr(data-tooltip)

            position: absolute
            bottom: 51px
            left: -10px

            padding: 10px

            width: 100%

            color: #fff
            font-weight: 100
            font-family: "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", "Microsoft Yahei", sans-serif

            text-align: center

            all-browser "border-radius", 5px

            background-color: #2C3E50
            all-browser "box-shadow", 0 0 2px 0 rgba(50, 50, 50, 0.75)

            opacity: 0

        .icon
            width: 128px
            height: @width

        .desc
            font-size: 20px
            color: #B3B3B3

        .learnmore
            color: #fff
            background-color: #1dba90
            all-browser "border-radius", 3px

            padding: 8px 20px

            font-size: 14px
            font-weight: bold
            line-height: 19px

        &:nth-child(1) .icon
            background: url( ../image/multi-language.png ) no-repeat

        &:nth-child(2) .icon
            background: url( ../image/time.png ) no-repeat

        &:nth-child(3) .icon
            background: url( ../image/upload.png ) no-repeat

        &:nth-child(4) .icon
            background: url( ../image/download.png ) no-repeat

        &:nth-child(5) .icon
            background: url( ../image/favorite.png ) no-repeat

        &:nth-child(6) .icon
            background: url( ../image/shortcuts.png ) no-repeat

.middle
    margin-bottom 25px
    padding 0 147px

    all-browser "flex-flow", row wrap

    a
        adapter-display( flex )
        all-browser "flex-flow", row nowrap
        all-browser "justify-content", center
        all-browser "align-items", center

        width 210px

        all-browser "border-radius", 5px

        padding 8px 30px
        margin 0 60px 30px 60px

        color #fff
        background-color #7C4DFF
        font-size 21px
        text-decoration none
        font-weight bold
        line-height 1.5

        &:hover
            background-color transparent
            border 1px solid transparent
            all-browser "border-color" #7C4DFF
            color #7C4DFF

            margin 0 59px 28px 59px

        div
            padding-left 5px

        span
            width 32px
            height @width

.footer
    all-browser "flex-flow", column nowrap

    background-color: #333
    color: #fff

    font-family: normal
    font-weight: normal

    width: 100%

    .copyright
        all-browser "flex-flow",       row wrap
        all-browser "justify-content", center

        padding: 0 0 10px 0

    a
        color: #fff
        text-decoration: none
        font-weight: bold

        &:hover
            color: #000
            background-color  : rgba(255,255,255,1)
            all-browser "transition", background-color 1s ease
            all-browser "border-radius", 3px

    p
        margin: 0

    // first child
    ul
        adapter-display( flex )
        all-browser "flex-flow",       row wrap
        all-browser "justify-content", center

        list-style: none

        padding: 0

        li
            adapter-display( flex )
            all-browser "flex-flow",       column wrap
            all-browser "align-items", center

            width: ( 960px / 2 )
            padding: 5px

            div
                all-browser "flex-flow",   column nowrap
                all-browser "align-items", flex-start

            // support
            &:nth-child(1) div

                    // share
                    nav
                        adapter-display( flex )
                        all-browser "flex-flow",   row nowrap
                        all-browser "justify-content", flex-start

                        padding: 1px 0

                        a
                            adapter-display( flex )
                            padding: 0 7px 0 0

                            background: #000
                            background: rgba(0, 0, 0, 0)

                            span
                                display: block

                                width : 24px
                                height: @width

                                opacity: 0.2

                                &:hover
                                  opacity: 1
                                  all-browser: "transition", opacity 1s ease

                            .weibo-share-icon
                                background: url( ../image/weibo-share-icon.png ) no-repeat

                            .twitter-share-icon
                                background: url( ../image/twitter-share-icon.png ) no-repeat

                            .facebook-share-icon
                                background: url( ../image/facebook-share-icon.png ) no-repeat

                            .gplus-share-icon
                                background: url( ../image/gplus-share-icon.png ) no-repeat

            // author
            &:nth-child(2) div

                .photo
                    display: block

                    width : 46px
                    height: @width

                    all-browser "border-radius", 50%

                    background: url( ../image/photo.jpg ) no-repeat

                div
                    all-browser "flex-flow",       row nowrap
                    all-browser "justify-content", flex-start
                    all-browser "align-items",     center

                    div
                        all-browser "flex-flow",   column nowrap
                        all-browser "align-items", flex-start

                        padding: 0 5px

                        nav
                            adapter-display( flex )

                            padding: 1px 0

                            a
                                adapter-display( flex )
                                all-browser "flex-flow", row, nowrap

                                padding: 0 7px 0 0

                                background: #000
                                background: rgba( 0, 0, 0, 0 )

                            span[class$="-icon"]
                                /*adapter-display( inline-box )*/

                                width : 24px
                                height: @width

                                opacity: 0.2

                                &:hover
                                    all-browser "transition", opacity .3s ease
                                    opacity: 1

                            .weibo-icon
                                background: url( ../image/weibo-icon.png ) no-repeat

                            .douban-icon
                                background: url( ../image/douban-icon.png ) no-repeat

                            .gplus-icon
                                background: url( ../image/gplus-icon.png ) no-repeat

                            .linkin-icon
                                background: url( ../image/linkin-icon.png ) no-repeat

                            span[class^="weibo"]:hover
                                background: url( ../image/weibo-hover-icon.png ) no-repeat

                            span[class^="douban"]:hover
                                background: url( ../image/douban-hover-icon.png ) no-repeat

                            span[class^="gplus"]:hover
                                background: url( ../image/gplus-hover-icon.png ) no-repeat

                            span[class^="linkin"]:hover
                                background: url( ../image/linkin-hover-icon.png ) no-repeat



